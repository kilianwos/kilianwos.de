<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # âœ… 1. Erlaube Dateien im content-Ordner direkt
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_URI} ^/content/
    RewriteRule ^ - [L]

    # ðŸ“¥ 2. Leite alles andere an router.php
    RewriteRule ^ router.php [L]
</IfModule>
